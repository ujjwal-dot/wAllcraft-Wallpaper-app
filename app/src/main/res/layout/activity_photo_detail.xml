<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoDetail"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="8dp"
            android:id="@+id/biggerImage"
            android:src="@drawable/loading"
            />




        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:id="@+id/downloadunsplash"
            android:src="@drawable/pixabay"
            android:background="@color/black"


            android:layout_below="@+id/biggerImage"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:id="@+id/download"
            android:background="@color/black"
            android:text="DOWNLOAD here"
            android:textColor="@color/white"
            android:layout_below="@+id/downloadunsplash"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:id="@+id/set"
            android:background="@color/black"
            android:text="SET WALLPAPER"
            android:textColor="@color/white"
            android:layout_below="@+id/download"/>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-6391723981977900/8103087543">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>





</androidx.drawerlayout.widget.DrawerLayout>